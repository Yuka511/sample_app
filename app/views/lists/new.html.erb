<h1>新規投稿</h1>
<% if @list.errors.any? %>
  <%= @list.errors.count %>件のエラーが発生しました
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!-- from_with部分 -->
<%= form_with model: @list, url: '/lists', method: :post do |f| %>  <!--  =「form_with model: @list do |f|」 (%=で挟んでね)-->
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  
  <!-- 【アプリケーション6章での追加部分】-->
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <!--【6章】ここまで-->
  
  <%= f.submit '投稿' %>
<% end %>